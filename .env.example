# Core application settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
API_BASE_URL=https://api.example.com

# Database configuration
DATABASE_URL=postgres://user:password@host:5432/database
DB_NAME=database_name

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=omni

# Mailgun SMTP configuration
MAILGUN_SMTP_HOST=smtp.mailgun.org
MAILGUN_SMTP_PORT=587
MAILGUN_SMTP_USER=postmaster@example.com
MAILGUN_SMTP_PASS=change-me
MAILGUN_SMTP_SECURE=false
MAILGUN_FROM_EMAIL=notifications@example.com

# Super admin bootstrap user
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_FIRSTNAME=Admin
SUPERADMIN_LASTNAME=User
SUPERADMIN_PHONE=+1234567890

# JWT configuration
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# MFA secret encryption (base64-encoded 32-byte key)
MFA_SECRET_KEY=base64-encoded-32-byte-key

# Telegram configuration
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=replace-with-api-hash
TELEGRAM_USE_WSS=true
TELEGRAM_CONNECTION_RETRIES=2
TELEGRAM_RECONNECT_RETRIES=3
TELEGRAM_RETRY_DELAY_MS=1000
TELEGRAM_TIMEOUT_SECONDS=30

# Sentry configuration
SENTRY_DSN=
