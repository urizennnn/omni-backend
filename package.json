{
  "name": "omni-backend",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "nest start",
    "prebuild": "rimraf dist",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "build:migrate": "yarn run build && yarn run migrations:up",
    "build:migrate:prod": "rm -rf dist && nest build && mikro-orm migration:up",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --ignore-pattern \"**/.*\"",
    "openapi": "npx nestia swagger --config src/config/openapi/nestia.config.ts && npx tsx scripts/tag-openapi.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migrations:create": "mikro-orm migration:create -n --config ./mikro-orm.config.ts",
    "migrations:up": "mikro-orm migration:up",
    "migrations:down": "mikro-orm migration:down",
    "schema:update": "mikro-orm schema:update --run",
    "prepare": "ts-patch install",
    "postinstall": "patch-package || true"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.5.6",
    "@mikro-orm/core": "^6.2.6",
    "@mikro-orm/migrations": "^6.2.6",
    "@mikro-orm/nestjs": "^6.0.1",
    "@mikro-orm/postgresql": "^6.2.6",
    "@mikro-orm/reflection": "^6.2.6",
    "@nestjs/cli": "^11.0.10",
    "@nestia/e2e": "^8.1.0",
    "@nestia/fetcher": "^8.1.0",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^11.1.6",
    "@sentry/nestjs": "^10.26.0",
    "axios": "^1.12.2",
    "bullmq": "^5.61.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.3",
    "imapflow": "^1.1.1",
    "ioredis": "^5.4.1",
    "redis": "^4.7.0",
    "mailparser": "^3.9.0",
    "nodemailer": "^6.9.14",
    "otplib": "^12.0.1",
    "prebuilt-tdlib": "^0.1008056.0",
    "pusher": "^5.2.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tdl": "^8.0.2",
    "twitter-api-v2": "^1.27.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@eslint/js": "^9.36.0",
    "@nestia/benchmark": "^8.1.0",
    "@nestia/core": "^8.1.0",
    "@nestia/sdk": "^8.1.0",
    "@nestjs/schematics": "^10.1.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/express": "^5.0.3",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.7",
    "nestia": "^8.1.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tsconfig-paths": "^4.2.0",
    "ttypescript": "^1.5.15",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.1",
    "typia": "^9.7.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix ",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss,html}": [
      "prettier --write"
    ]
  }
}
